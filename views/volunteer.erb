<div class = "container">

  <div class = "row">

    <div class = "col-md-6">

    <%= "<h4>update volunteer: #{@volunteer.name}</h4>" %>
    <%= "<h5>current project: #{@project}</h5>" %>
    <div class = "form-group">
      <form action= "/volunteer" method = "post">
        <input name="_method" type="hidden" value="patch">
        <label>update name:</label>
        <input class = "form-control" name="name">
        <br>
        <button type="submit" class = "btn btn-info" name = "volunteer_id" value = "<%= @volunteer.volunteer_id %>">update</button>
      </form>
      <br>
      <form action = "/volunteer" method = "post">
        <input name="_method" type="hidden" value="delete">
        <button type="submit" class = "btn btn-danger" name = "volunteer_id" value = "<%= @volunteer.volunteer_id %>">delete</button>
      </form>
    </div>

    <h4>assign a project</h4>
    <div class = "form-group">
      <form action= "/assign-volunteer" method = "post">
        <input name="volunteer_id" type="hidden" value="<%= @volunteer.volunteer_id %>">
        <input name="_method" type="hidden" value="patch">
        <% @projects.each do |project| %>
          <%= "<button type='submit' name='project_id' value='#{project.project_id}' class='projects btn btn-success'>#{project.name}</button> "%>
        <% end %>
      </form>
    </div>
  </div>

</div>